<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.ContentActivity"
    android:background="@color/dark_blue">




    <TextView
        android:id="@+id/ctn_hi_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_hi"
        android:textColor="@android:color/white"
        android:textSize="@dimen/content_text"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/pod_txt_view"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/name_zuper_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_zuper_cnt"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/content_text"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ctn_hi_txt"

        />

    <TextView
        android:id="@+id/continues_txt_cnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_project_txt"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ctn_hi_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/content_text"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/pod_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/continues_txt_cnt"
        app:layout_constraintLeft_toLeftOf="@id/continues_txt_cnt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="@string/pod_txt"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/content_text"
        />

    <Spinner
        android:id="@+id/pod_spi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/pod_txt_view"
        app:layout_constraintLeft_toLeftOf="@id/pod_txt_view"
        android:textSize="23sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        />

    <TextView
        android:id="@+id/project_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pod_spi"
        app:layout_constraintLeft_toLeftOf="@+id/continues_txt_cnt"
        android:text="@string/project_cnt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/content_text"
        />

    <Spinner
        android:id="@+id/project_spi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/project_txt_view"
        app:layout_constraintLeft_toLeftOf="@id/pod_txt_view"
        app:layout_constraintLeft_toRightOf="@id/continues_txt_cnt"
        android:textSize="23sp"
        android:hint="@string/say_here_cnt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        />

    <TextView
        android:id="@+id/located_edit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/project_spi"
        app:layout_constraintLeft_toLeftOf="@+id/project_spi"
        android:text="@string/localizao_txt"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/content_text"
        />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/located_spi"
        app:layout_constraintTop_toBottomOf="@id/located_edit_txt"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/project_spi"
        app:layout_constraintRight_toRightOf="@id/project_spi"
        app:layout_constraintLeft_toRightOf="@id/continues_txt_cnt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        />

    <Button
        android:id="@+id/btn_content"
        android:layout_width="@dimen/result_buttons_width"
        android:layout_height="@dimen/result_buttons_height"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_send_and_finalize_selector"
        android:text="@string/cadastro_content"
        app:layout_constraintTop_toBottomOf="@+id/located_spi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>