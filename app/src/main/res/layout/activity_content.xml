<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.ContentActivity"
    android:background="@color/dark_blue"
    >

    <TextView
        android:id="@+id/ac_cnt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_txt"
        android:textSize="@dimen/content_text"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/welcome_size"
        />


    <TextView
        android:id="@+id/ac_cnt_pod_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_project_txt"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ac_cnt_txt"
        app:layout_constraintBottom_toTopOf="@id/cnt_project_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="@dimen/content_text"
        android:paddingEnd="@dimen/content_text"
        android:textAlignment="center"
        android:textSize="@dimen/content_text"
        android:textColor="@android:color/white"
        />

        <TextView
            android:id="@+id/cnt_project_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ac_cnt_pod_project"
            app:layout_constraintLeft_toLeftOf="@id/ac_cnt_pod_project"
            android:text="@string/project_cnt"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/content_text"

            />

    <Button
        android:id="@+id/btn_content"
        android:layout_width="@dimen/result_buttons_width"
        android:layout_height="@dimen/result_buttons_height"
        android:layout_marginTop="@dimen/result_buttons_margin_top"
        android:background="@drawable/btn_send_and_finalize_selector"
        android:text="@string/cadastro_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>