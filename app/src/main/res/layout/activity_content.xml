<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.ContentActivity"
    android:background="@color/dark_blue">

    <TextView
        android:id="@+id/ctn_hi_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/welcome_size"
        android:text="@string/txt_hi"
        android:textColor="@android:color/white"
        android:textSize="@dimen/content_text"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/name_zuper_cnt"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/name_zuper_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/welcome_size"
        android:text="@string/name_zuper_cnt"
        android:textColor="@android:color/white"
        android:textSize="@dimen/content_text"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ctn_hi_txt"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/change_details_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_project_txt"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/name_zuper_cnt"
        app:layout_constraintBottom_toTopOf="@id/project_txt_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/content_text"
        android:textColor="@android:color/white"
        />

        <TextView
            android:id="@+id/project_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/change_details_txt"
            app:layout_constraintLeft_toLeftOf="@id/change_details_txt"
            android:layout_marginTop="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:text="@string/project_cnt"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/content_text"
            />

    <EditText
        android:id="@+id/project_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/project_txt_view"
        app:layout_constraintLeft_toLeftOf="@id/project_txt_view"
        app:layout_constraintLeft_toRightOf="@id/change_details_txt"
        android:textSize="23sp"
        android:hint="@string/say_here_cnt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:padding="5dp"
        android:importantForAutofill="no"
        />

    <TextView
        android:id="@+id/pod_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/project_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/change_details_txt"
        android:text="@string/pod_txt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/content_text"
        />

    <EditText
        android:id="@+id/pod_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/pod_txt_view"
        app:layout_constraintLeft_toLeftOf="@id/project_txt_view"
        app:layout_constraintLeft_toRightOf="@id/change_details_txt"
        android:textSize="23sp"
        android:hint="@string/say_here_cnt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:padding="5dp"
        android:importantForAutofill="no"
        />

    <Button
        android:id="@+id/btn_content"
        android:layout_width="@dimen/result_buttons_width"
        android:layout_height="@dimen/result_buttons_height"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_send_and_finalize_selector"
        android:text="@string/cadastro_content"
        app:layout_constraintTop_toBottomOf="@+id/pod_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>