<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".view.ContentActivity">

    <TextView
        android:id="@+id/subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/subject_title_margin_top"
        android:text="TÃ­tulo do assunto"
        android:textColor="@color/white"
        android:textSize="@dimen/subject_title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_link_zupnet_margin_top"
        android:text="LINK DO ZUPNET"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/subject_title"
        app:layout_constraintRight_toRightOf="@id/subject_title"
        app:layout_constraintTop_toTopOf="@id/subject_title" />

    <Button
        android:id="@+id/answer_quiz"
        android:layout_width="@dimen/answer_quiz_button_width"
        android:layout_height="@dimen/answer_quiz_button_height"
        android:layout_marginTop="@dimen/answer_quiz_button_margin_top"
        android:background="@drawable/btn_answer_quiz_selector"
        android:text="@string/answer_quiz_label"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/content_link"
        app:layout_constraintRight_toRightOf="@id/content_link"
        app:layout_constraintTop_toTopOf="@id/content_link" />

</androidx.constraintlayout.widget.ConstraintLayout>